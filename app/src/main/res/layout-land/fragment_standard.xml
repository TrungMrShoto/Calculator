<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20"
        app:layout_constraintBottom_toTopOf="@+id/guideline30"
        app:layout_constraintEnd_toStartOf="@+id/guideline46"
        app:layout_constraintStart_toStartOf="@+id/guideline40"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/SHIFT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="SHIFT"
            android:textColor="@color/c2"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/HYP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="HYP"
            android:textAlignment="center"
            android:textColor="@color/c2"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RAD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="RAD"
            android:textAlignment="center"
            android:textColor="@color/c2"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DEG"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="DEG"
            android:textAlignment="center"
            android:textColor="@color/c2"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/standard_keyboard"
        app:layout_constraintEnd_toStartOf="@+id/guideline46"
        app:layout_constraintStart_toStartOf="@+id/guideline40"
        app:layout_constraintTop_toTopOf="@+id/guideline30">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:scrollbars="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/standard_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:maxLength="80"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:scrollHorizontally="true"
                android:text="@string/default_value"
                android:textAlignment="viewEnd"
                android:textColor="#575757"
                android:textSize="35sp" />
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:scrollbars="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/standard_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:maxLength="80"
                android:paddingStart="@dimen/padding_TextView"
                android:paddingEnd="@dimen/padding_TextView"
                android:text="@string/default_value"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />

        </HorizontalScrollView>

    </LinearLayout>

    <GridView
        android:id="@+id/standard_keyboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/c4"
        android:fitsSystemWindows="true"
        android:horizontalSpacing="1dp"
        android:numColumns="9"
        android:stretchMode="columnWidth"
        android:textAlignment="center"
        android:verticalSpacing="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />




</androidx.constraintlayout.widget.ConstraintLayout>